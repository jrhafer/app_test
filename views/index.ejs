<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Calculator</title>
    <style>
      body {
        background-color: cadetblue;
      }

      .container {
        margin: auto;
        margin-top: 50px;
        width: 380px;
        height: 500px;
        border: 2px solid black;
        background-color: black;
        border-radius: 4%;
      }
      .calc_buttons {
        width: 320px;
        height: 340px;
        margin-top: 30px;
        margin-left: 30px;
        margin-right: 30px;
        border: 1px;

        display: grid;

        grid-template-columns: 1fr 1fr 1fr 1fr;
        grid-template-rows: 1fr 1fr 1fr 1fr;

        gap: 10px;
      }

      .calc_display {
        width: 340px;
        height: 76px;
        margin-left: 20px;
        margin-right: 20px;
        margin-top: 20px;
        border: 1px solid black;
        background-color: rgb(199, 238, 140);
      }

      .button {
        background-color: gray;
        font-size: 50px;
        text-align: center;

        padding-top: 10px;
        border-radius: 10%;
        font-family: Arial, Helvetica, sans-serif;
        box-shadow: 2px 2px 4px white;
      }

      .button:active {
        transform: scale(0.98);
        box-shadow: 1.5px 1.5px 3px white;
      }
      .equal {
        grid-row: span 2;
        padding-top: 50px;
        background-color: brown;
      }
    </style>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        let buttons = document.getElementsByClassName("calc_buttons");
        let screen = document.querySelector(".calc_display");
        document.addEventListener("click", (event) => {
          if (event.target.classList.contains("button")) {
            screen.textContent += event.target.textContent;
          }
        });
      });
    </script>
  </head>
  <body>
    <div class="container">
      <div class="calc_display"></div>
      <div class="calc_buttons">
        <div class="button">7</div>
        <div class="button">8</div>
        <div class="button">9</div>
        <div class="button">+</div>
        <div class="button">4</div>
        <div class="button">5</div>
        <div class="button">6</div>
        <div class="button">-</div>
        <div class="button">1</div>
        <div class="button">2</div>
        <div class="button">3</div>
        <div class="button equal">=</div>
        <div class="button">0</div>
        <div class="button decimal">.</div>
        <div class="button clear">C</div>
      </div>
    </div>
  </body>
</html>
